    $(document).ready(function () {

        $('.categoriesFilterContainer').click(function () {

            $(this).parent().find('.portlet-body').slideToggle("slow", function () { });

            var arrowElement = $(this).find('i.fa');
            if (arrowElement.hasClass('fa-chevron-down')) {
                arrowElement.removeClass('fa-chevron-down');
                arrowElement.addClass('fa-chevron-up');
            } else {
                arrowElement.removeClass('fa-chevron-up');
                arrowElement.addClass('fa-chevron-down');
            }

        });

    });

</script>