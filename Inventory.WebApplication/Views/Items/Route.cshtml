@using Inventory.WebApplication.Global

@{
    ViewBag.Title = "Route";
}

<div class="page-content-wrapper">
    <div class="page-content">

        @Html.Partial("_ThemeColors")

        <h1 class="page-title"> @Translation.GetStringValue("Items") </h1>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Home")">@Translation.GetStringValue("Items")</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span> @Translation.GetStringValue("TransactionsQuestion") </span>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-lg-12 col-xs-12 col-sm-12">
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-bubble font-dark hide"></i>
                            <span class="caption-subject font-hide bold uppercase">@Translation.GetStringValue("AddOrDeleteItems")</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mt-widget-1 addNewItemsSection">
                                    <div class="mt-img">
                                        <img src="../images/new-items.png" style="width:100px;">
                                    </div>
                                    <div class="mt-body">
                                        <h3 class="mt-username"> @Translation.GetStringValue("AddNewItemsToStock") </h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mt-widget-1 editItemsSection">
                                    <div class="mt-img">
                                        <img src="../images/delete-items.png" style="width:100px;">
                                    </div>
                                    <div class="mt-body">
                                        <h3 class="mt-username"> @Translation.GetStringValue("DeleteItemsFromStock") </h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        itemsActive();

        $('.addNewItemsSection').click(function () {
            var url = '@Url.Action("Create","Items")';
            window.location = url;
        });
        
        $('.editItemsSection').click(function () {
            var url = '@Url.Action("EditSection","Items")';
            window.location = url;
        });
    });

</script>