@using Inventory.DataObjects.EDM

@model List<PageManagement>

@{
    ViewBag.Title = "Index";
    List<AspNetRole> aspNetRoles = ViewBag.AspNetRoles as List<AspNetRole>;
}

<style type="text/css">

    .dt-buttons{
        display:none!important;
    }

</style>

<div class="modal fade" id="assignPageAuthorizationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Page Management</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h4 id="assignItem" style="color:red;">Manage Pages By Roles</h4>
                <hr />
                <div class="form-group">
                    <label>Page</label>
                    <select id="pageName" class="form-control" style="width:100%;">
                        <optgroup label="Home">
                            <option value="Home">Home</option>
                            <option value="Reports">Reports</option>
                        </optgroup>
                        <optgroup label="Transactions">
                            <option value="Transactions">Transactions</option>
                            <option value="TransactionsHistory">Transactions History</option>
                        </optgroup>
                        <optgroup label="Items">
                            <option value="Items">Items(Create or Edit)</option>
                            <option value="Pricing">Pricing</option>
                            <option value="Deteriorated">Deteriorated</option>
                        </optgroup>
                        <optgroup label="Management">
                            <option value="Users">Users</option>
                            <option value="Roles">Roles</option>
                            <option value="PageManagement">Page Management</option>
                            <option value="Suppliers">Suppliers</option>
                        </optgroup>
                    </select>
                </div>
                <div class="form-group">
                    <label>Role</label>
                    <select id="userRole" name="UserRole" style="width:100%;">
                        @{
                            foreach (var role in aspNetRoles)
                            {
                                <option value="@role.Name">@role.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Authorization</label>
                    <select id="allowed" class="form-control" style="width:100%;">
                        <option value="true">Allowed</option>
                        <option value="false">Not Allowed</option>
                    </select>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button id="assignPageManagement" type="button" class="btn btn-primary">Assign</button>
            </div>
        </div>
    </div>
</div>



<div class="page-content-wrapper">
    <div class="page-content">

        @Html.Partial("_ThemeColors")

        <h1 class="page-title"> Management </h1>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="index.html">Allowed Pages</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span>By Role</span>
                </li>
            </ul>
        </div>

        <div class="row">
            <div class="col-lg-12 col-xs-12 col-sm-12">
                <div class="portlet light bordered">
                    <div class="portlet-title tabbable-line">
                        <div class="caption">
                            <i class="icon-bubbles font-dark hide"></i>
                            <span class="caption-subject font-dark bold uppercase">Authorization table</span>
                        </div>
                        <div class="caption" style="float:right;">
                            <button id="assignActionSelector" class="btn sbold green" data-toggle="modal" data-target="#assignPageAuthorizationModal">
                                Assign
                                <i class="fa fa-archive" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="portlet_comments_1">
                                <div class="mt-comments">

                                    <table id="pagesManagementTable" class="table table-striped table-bordered table-hover table-checkable order-column">
                                        <thead>
                                            <tr>
                                                @*<th>

                                                </th>*@
                                                <th>
                                                    Page Name
                                                </th>
                                                <th>
                                                    Role Name
                                                </th>
                                                <th>
                                                    Allowed
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                foreach (var page in Model)
                                                {
                                                    <tr class="odd gradeX">
                                                        @*<td>
                                                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                                                <input type="checkbox" class="checkboxes" value="@page.Id" />
                                                                <span></span>
                                                            </label>
                                                        </td>*@
                                                        <td>
                                                            @page.PageName
                                                        </td>
                                                        <td>
                                                            @page.RoleName
                                                        </td>
                                                        <td>
                                                            @page.Allowed
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>



                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {

        pageManagementActive();

    });

</script>


<script type="text/javascript">

    $(document).ready(function () {

        usersActive();
        $("select").select2();
        $('select').val('@ViewBag.UserRole').trigger('change');
        //$('#userRole').val('').trigger('change');

    });


    $(document).on('click', '#assignPageManagement', function () {

        $.ajax({
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            type: 'POST',
            url: "@Url.Action("AssignPageManagement","PageManagement")?pageName=" + $('#pageName').val()
                + '&userRole=' + $('#userRole').val()
                + '&allowed=' + $('#allowed').val(),
            success: function (response) {
                $('#assignPageAuthorizationModal').modal('hide');
                location.reload();
            }
        });

    });

</script>