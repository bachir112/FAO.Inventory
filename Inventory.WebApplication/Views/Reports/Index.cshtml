                                    @{
                                        foreach (var availability in availabilityStatus)
                                        {
                                            <option value="@availability.Id">@availability.Status</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="row" style="padding-bottom:15px;">
                            <div class="col-sm-3">
                                <input id="minQuantity" type="number" class="form-control" placeholder="@Translation.GetStringValue("MinQuantity")" />
                            </div>
                            <div class="col-sm-3">
                                <input id="maxQuantity" type="number" class="form-control" placeholder="@Translation.GetStringValue("MaxQuantity")" />
                            </div>
