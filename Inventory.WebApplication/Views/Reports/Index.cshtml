                                @{
                                    foreach (var user in users)
                                    {
                                        <div>
                                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                                <input value="@user.Id" type="checkbox" class="checkboxes">
                                                <span></span>
                                                <i style="font-style:normal;">@user.Email</i>
                                            </label>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
