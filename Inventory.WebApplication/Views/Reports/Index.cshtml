@using Inventory.DataObjects.EDM
@using Inventory.DataObjects.DTO
@using Inventory.WebApplication.Global

@{
    ViewBag.Title = "Reports";

    List<ItemNames> itemName = ViewBag.ItemsNames as List<ItemNames>;
    List<AvailabilityStatu> availabilityStatus = ViewBag.AvailabilityStatus as List<AvailabilityStatu>;
    List<AspNetUser> users = ViewBag.Users as List<AspNetUser>;
}

<style type="text/css">

    .form-group.form-md-line-input {
        position: relative;
        margin: 0;
        padding-top: 20px;
        border-bottom: 1px solid #eef1f5;
    }
</style>

<div id="sendEmailModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <input id="user_email" type="text" class="form-control" placeholder="Your email">
            </div>
            <div class="modal-footer">
                <button id="sendEmail" class="btn btn-primary" data-dismiss="modal">
                    @Translation.GetStringValue("SendAsEmail")
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="reportSettingModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
