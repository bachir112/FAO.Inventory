@using Inventory.DataObjects.DTO
@using Inventory.WebApplication.Global

@model List<ABCItemsDTO>

@{
    ViewBag.Title = "Quantity Report";
}

<style>

    #chartdiv {
        width: 100%;
        height: 500px;
    }

</style>

<div class="page-content-wrapper">
    <div class="page-content">

        @Html.Partial("_ThemeColors")

        <h1 class="page-title"> @Translation.GetStringValue("GeneratedReports") </h1>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Home")">@Translation.GetStringValue("Reports")</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span class="english"> ABC Analysis </span>
                    <span class="arabic"> ABC analysis </span>
                </li>
            </ul>
        </div>

        <div class="row">
            <div class="col-lg-12 col-xs-12 col-sm-12">
                <div class="portlet light bordered">
                    <div class="portlet-title tabbable-line">
                        <div class="caption">
                            <i class="icon-bubbles font-dark hide"></i>
                            <span class="caption-subject font-dark bold uppercase english"> ABC Analysis </span>
                            <span class="caption-subject font-dark bold uppercase arabic"> تحليل ABC </span>
                        </div>
                        <div class="caption">
                            <i class="icon-bubbles font-dark hide"></i>
                            <span class="caption-subject font-dark bold uppercase english"> ABC inventory analysis is a method used to classify a business's stock items into three categories – A, B and C, based on their value to the business. A items are the most important in terms of the value they bring a school, while C items are the least valuable  </span>
                            <span class="caption-subject font-dark bold uppercase arabic">
                                تحليل مخزون ABC هو طريقة تستخدم لتصنيف عناصر مخزون المدرسة إلى ثلاث فئات - A و B و C ، بناءً على قيمتها بالنسبة للأعمال. العناصر A هي الأكثر أهمية من حيث القيمة التي تجلبها للمدرسة، بينما العناصر C هي الأقل قيمة
                           </span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="portlet_comments_1">
                                <div class="mt-comments">
                                    <div id="chartdiv"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Resources -->
<script src="@Url.Content("~/assets/amcharts/core.js")"></script>
<script src="@Url.Content("~/assets/amcharts/charts.js")"></script>
<script src="@Url.Content("~/assets/amcharts/animated.js")"></script>


<script>
    am4core.ready(function () {

        am4core.useTheme(am4themes_animated);

        var chart = am4core.create("chartdiv", am4charts.XYChart);

