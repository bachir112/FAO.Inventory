@using Inventory.WebApplication.Global
@using Inventory.DataObjects.EDM

@model Inventory.DataObjects.EDM.Supplier

@{
    ViewBag.Title = "Create";

    List<School> schools = ViewBag.Schools as List<School>;
}

<style type="text/css">
    .form-horizontal .form-group {
        margin-left: 0;
        margin-right: 0;
    }

    #IsSchool {
        width: 100% !important;
    }
</style>

<div class="page-content-wrapper">
    <div class="page-content">

        <p id="userExists" style="display:none; color:red;">
            <span class="english">This supplier already exists for this school. Please change the supplier's name</span>
            <span class="arabic">هذا المورد موجود بالفعل لهذه المدرسة. الرجاء تغيير اسم المورد</span>
        </p>

        <h1 class="page-title"> @Translation.GetStringValue("Suppliers") </h1>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Suppliers")">@Translation.GetStringValue("Suppliers")</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span>@Translation.GetStringValue("Create")</span>
                </li>
            </ul>
        </div>
        @*Content starts here*@
    <div class="form-horizontal">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <p class="hint"> @Translation.GetStringValue("Supplier") </p>
            <div class="form-group">
                <label class="control-label col-md-2">@Translation.GetStringValue("SupplierName")</label>
                <div class="col-md-10">
                    <input class="form-control placeholder-no-fix" type="text" placeholder="@Translation.GetStringValue("SupplierName")" name="Supplier1" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">@Translation.GetStringValue("IsSchool")</label>
                <div class="col-md-10">
                    <div class="checkbox">
                        <select class="list-box tri-state select2-hidden-accessible" id="IsSchool" name="IsSchool" data-select2-id="IsSchool" tabindex="-1" aria-hidden="true">
                            <option value="">@Translation.GetStringValue("NotSet")</option>
                            <option value="true">@Translation.GetStringValue("True")</option>
                            <option value="false">@Translation.GetStringValue("False")</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.IsSchool, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            if (ViewBag.UserSchool == 0)
            {
                <div class="form-group">
                    <label class="control-label col-md-2">@Translation.GetStringValue("School")</label>
                    <select id="schools" name="SchoolID" class="control-label col-md-10">
                        @{
                            foreach (var school in schools)
                            {
                                <option value="@(school.ID)">@(school.SchoolName_Ar)</option>
                            }
                        }
                    </select>
                </div>
            }
            else
            {
                <input style="display:none;" name="SchoolID" value="@(ViewBag.UserSchool)" />
            }
            <div class="form-group">
                <hr />
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@Translation.GetStringValue("Create")" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
        @*Content ends here*@
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        pageManagementActive();
        $('#IsSchool').select2();
    });

    @{ 
        if(ViewBag.Exists != null)
        {
            <text>
                $(document).ready(function () {
                    $('#userExists').show();
                });
            </text>
        }
    }

</script>