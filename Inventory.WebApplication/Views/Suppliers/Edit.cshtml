@using Inventory.WebApplication.Global

@model Inventory.DataObjects.EDM.Supplier

@{
    ViewBag.Title = "Edit";
}

<style type="text/css">
    .form-horizontal .form-group {
        margin-left: 0;
        margin-right: 0;
    }

    #IsSchool {
        width: 100% !important;
    }
</style>

<div class="page-content-wrapper">
    <div class="page-content">

        @*@Html.Partial("_ThemeColors")*@

        <h1 class="page-title"> @Translation.GetStringValue("Suppliers") </h1>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Suppliers")">@Translation.GetStringValue("Suppliers")</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span>@Translation.GetStringValue("Edit")</span>
                </li>
            </ul>
        </div>
        @*Content starts here*@
        <div class="form-horizontal">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <p class="hint"> @Translation.GetStringValue("Edit") </p>
                <div class="form-group">
                    <label class="control-label col-md-2">@Translation.GetStringValue("SupplierName")</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Supplier1, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">@Translation.GetStringValue("IsSchool")</label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            <select class="list-box tri-state select2-hidden-accessible" id="IsSchool" name="IsSchool" data-select2-id="IsSchool" tabindex="-1" aria-hidden="true">
                                <option value="">@Translation.GetStringValue("NotSet")</option>
                                <option value="true">@Translation.GetStringValue("True")</option>
                                <option value="false">@Translation.GetStringValue("False")</option>
                            </select>
                            @Html.ValidationMessageFor(model => model.IsSchool, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group" style="display:none;">
                    @Html.LabelFor(model => model.SchoolID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SchoolID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SchoolID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
        @*Content ends here*@
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        pageManagementActive();
        $('select').select2();
    });

</script>