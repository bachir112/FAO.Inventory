@model Inventory.DataObjects.EDM.Supplier

@{
    ViewBag.Title = "Edit";
}

<style type="text/css">
    .form-horizontal .form-group {
        margin-left: 0;
        margin-right: 0;
    }

    #IsSchool {
        width: 100% !important;
    }
</style>

<div class="page-content-wrapper">
    <div class="page-content">

        @Html.Partial("_ThemeColors")

        <h1 class="page-title"> Suppliers </h1>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Home")">Suppliers</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span>Edit Supplier</span>
                </li>
            </ul>
        </div>
        @*Content starts here*@
        <div class="form-horizontal">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <p class="hint"> Edit the supplier details below: </p>
                <div class="form-group">
                    <label class="control-label col-md-2">Supplier Name</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Supplier1, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Is School</label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.IsSchool, new { @style = "width:400px;" })
                            @Html.ValidationMessageFor(model => model.IsSchool, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
        @*Content ends here*@
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        pageManagementActive();
        $('select').select2();
    });

</script>