@using Inventory.DataObjects.DTO
@model List<ItemsGroupedDTO>

@{ 
    Layout = null;
    string categoryName = ViewBag.CategoryName;
    categoryName = categoryName == null ? "All Stock" : categoryName;
}

<div class="col-md-12">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption font-dark pull-right">
                <button type="button" class="btn btn-circle red btn-outline">View all Items</button>
            </div>
        </div>
        <div class="portlet-title">
            <div class="caption font-dark">
                <img src="../images/all-items.png" style="width:50px;">
                <span class="caption-subject bold uppercase"> Items in <span style="color: red;">@categoryName.ToUpper()</span></span>
            </div>
        </div>
        <div class="portlet-body">
            <div class="table-toolbar">
                <div id="editActionContainer" class="row" style="display:none;">
                    <div class="col-md-6">
                        <div class="btn-group">
                            <button id="editItemActionSelector" class="btn sbold green" data-toggle="modal" data-target="#editItemModal">
                                Edit
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </button>

                            <button id="batchEditItemActionSelector" class="btn sbold green" style="margin-left:15px;" data-toggle="modal" data-target="#editItemModal">
                                Edit Batch
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div id="assignActionContainer" class="row" style="display:none;">
                    <div class="col-md-6">
                        <div class="btn-group">
                            <button id="assignActionSelector" class="btn sbold green" data-toggle="modal" data-target="#assignItemModal">
                                Assign
                                <i class="fa fa-archive" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <table id="itemsTable" class="table table-striped table-bordered table-hover table-checkable order-column">
                <thead>
                    <tr>
                        <th>
                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                <input type="checkbox" class="group-checkable" data-set="#itemsTable .checkboxes" />
                                <span></span>
                            </label>
                        </th>
                        <th> Item Name </th>
                        <th> Availability </th>
                        <th> Received On </th>
                        <th> Quantity </th>
                        <th> Amount </th>
                        <th> Location in Stock </th>
                        <th> Description </th>
                        <th> Expiry Date </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (ItemsGroupedDTO item in Model)
                        {
                            string AvailabilityStatusColor = string.Empty;
                            switch (item.AvailabilityStatusID)
                            {
                                case 1:
                                    AvailabilityStatusColor = "success";
                                    break;
                                case 2:
                                    AvailabilityStatusColor = "danger";
                                    break;
                                case 3:
                                    AvailabilityStatusColor = "warning";
                                    break;
                                default:
                                    AvailabilityStatusColor = "default";
                                    break;
                            }

                            <tr class="odd gradeX">
                                <td>
                                    <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                        <input type="checkbox" class="checkboxes" 
                                               data-Name="@item.Name" 
                                               data-AvailabilityStatusID="@item.AvailabilityStatusID"
                                               data-ItemStatusID = "@item.ItemStatusID"
                                               data-ExpiryDate="@item.ExpiryDate" 
                                               data-LocationInStock="@item.LocationInStock" 
                                               data-ReceivedOn="@item.ReceivedOn" 
                                               data-Description="@item.Description" 
                                               data-UnitID="@item.UnitID" 
                                               data-UnitAmount="@item.UnitAmount" 
                                               />
                                        <span></span>
                                    </label>
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    <span class="label label-sm label-@AvailabilityStatusColor"> @item.AvailabilityStatus </span>                                    
                                </td>
                                <td>
                                    @item.ReceivedOn
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    @item.UnitAmount @item.Unit
                                </td>
                                <td class="center">
                                    @item.LocationInStock
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.ExpiryDate
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {

        var table = $('#itemsTable');

        var oTable = table.dataTable({
            "language": {
                "aria": {
                    "sortAscending": ": activate to sort column ascending",
                    "sortDescending": ": activate to sort column descending"
                },
                "emptyTable": "No data available in table",
                "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                "infoEmpty": "No entries found",
                "infoFiltered": "(filtered1 from _MAX_ total entries)",
                "lengthMenu": "_MENU_ entries",
                "search": "Search:",
                "zeroRecords": "No matching records found"
            },
            "order": [
                [0, 'asc']
            ],
            "lengthMenu": [
                [5, 10, 15, 20, -1],
                [5, 10, 15, 20, "All"] // change per page values here
            ],
            "pageLength": 10,
            "dom": "<'row' <'col-md-12'B>><'row'<'col-md-6 col-sm-12'l><'col-md-6 col-sm-12'f>r><'table-scrollable't><'row'<'col-md-5 col-sm-12'i><'col-md-7 col-sm-12'p>>", // horizobtal scrollable datatable
            buttons: [
                { extend: 'print', className: 'btn dark btn-outline' },
                { extend: 'pdf', className: 'btn green btn-outline' },
                { extend: 'excel', className: 'btn yellow btn-outline ' }
            ],
            responsive: true
        });
    });

</script>